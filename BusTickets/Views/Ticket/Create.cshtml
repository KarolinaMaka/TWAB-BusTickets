@using Microsoft.AspNetCore.Mvc.Rendering
@using BusTickets.Data

@model BusTickets.Data.Ticket

@{
    ViewData["Title"] = "Kup Bilet";
}

<h1>Kup Bilet</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="TicketType" class="control-label"></label>
        <select asp-for="TicketType" class="form-control" asp-items="@(new SelectList(Enum.GetValues(typeof(BusTickets.Data.TicketTypeEnum)).Cast<BusTickets.Data.TicketTypeEnum>()))"></select>
    </div>
    <div class="form-group">
        <label asp-for="BuyerName" class="control-label"></label>
        <input asp-for="BuyerName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BuyerLastName" class="control-label"></label>
        <input asp-for="BuyerLastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BuyerEmail" class="control-label"></label>
        <input asp-for="BuyerEmail" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IsValidated" class="control-label"></label>
        <input asp-for="IsValidated" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Kup" class="btn btn-primary" />
    </div>
</form>
